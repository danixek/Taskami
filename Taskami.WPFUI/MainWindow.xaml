<Window x:Class="Taskami.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:Taskami"
        Title="Taskami" Height="450" Width="800"
        Background="#121212">
    <Grid HorizontalAlignment="Center" Width="800">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="90"/>
            <!-- Sidebar -->
            <ColumnDefinition/>
            <!-- Main content -->
        </Grid.ColumnDefinitions>


        <!-- Levý panel se záložkami -->
        <Grid Background="#1E1E1E" Grid.Column="0" Margin="0,0,10,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!-- To-Do tlačítko -->
            <Button Grid.Row="0" Click="ShowTodoView" Margin="0,10,0,10" Width="NaN">
                <Button.Style>
                    <Style TargetType="Button">
                        <!-- Výchozí stav tlačítka (průhledné pozadí) -->
                        <Setter Property="Background" Value="Transparent"/>
                        <Setter Property="Foreground" Value="White"/>
                        <Setter Property="BorderBrush" Value="#555"/>
                        <Setter Property="BorderThickness" Value="1"/>
                        <Setter Property="Width" Value="60"/>

                        <!-- Při hover a active změníme pozadí na #333 -->
                        <Style.Triggers>
                            <!-- Trigger pro :hover -->
                            <DataTrigger Binding="{Binding IsMouseOver, RelativeSource={RelativeSource Self}}" Value="True">
                                <DataTrigger.EnterActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <ColorAnimation Duration="0:0:0.2" To="#333" Storyboard.TargetProperty="(Button.Background).(SolidColorBrush.Color)" />
                                        </Storyboard>
                                    </BeginStoryboard>
                                </DataTrigger.EnterActions>
                            </DataTrigger>

                            <!-- Trigger pro :active -->
                            <DataTrigger Binding="{Binding IsPressed, RelativeSource={RelativeSource Self}}" Value="True">
                                <DataTrigger.EnterActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <ColorAnimation Duration="0:0:0.2" To="#333" Storyboard.TargetProperty="(Button.Background).(SolidColorBrush.Color)" />
                                        </Storyboard>
                                    </BeginStoryboard>
                                </DataTrigger.EnterActions>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>

                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                    <TextBlock Text="📝" FontSize="25" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    <TextBlock Text="To‑Do" FontSize="12" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,7,0,0"/>
                </StackPanel>
            </Button>

            <!-- Diář tlačítko -->
            <Button Grid.Row="1" Click="ShowDiaryView" Margin="0,10,0,10" Width="NaN">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Background" Value="Transparent"/>
                        <Setter Property="Foreground" Value="White"/>
                        <Setter Property="BorderBrush" Value="#555"/>
                        <Setter Property="BorderThickness" Value="1"/>
                        <Setter Property="Width" Value="60"/>

                        <Style.Triggers>
                            <DataTrigger Binding="{Binding IsMouseOver, RelativeSource={RelativeSource Self}}" Value="True">
                                <DataTrigger.EnterActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <ColorAnimation Duration="0:0:0.2" To="#333" Storyboard.TargetProperty="(Button.Background).(SolidColorBrush.Color)" />
                                        </Storyboard>
                                    </BeginStoryboard>
                                </DataTrigger.EnterActions>
                            </DataTrigger>

                            <DataTrigger Binding="{Binding IsPressed, RelativeSource={RelativeSource Self}}" Value="True">
                                <DataTrigger.EnterActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <ColorAnimation Duration="0:0:0.2" To="#333" Storyboard.TargetProperty="(Button.Background).(SolidColorBrush.Color)" />
                                        </Storyboard>
                                    </BeginStoryboard>
                                </DataTrigger.EnterActions>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>

                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                    <TextBlock Text="🧠" FontSize="25" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    <TextBlock Text="Diář" FontSize="12" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,7,0,0"/>
                </StackPanel>
            </Button>

            <!-- Pomodoro tlačítko -->
            <Button Grid.Row="2" Click="ShowPomodoroView" Margin="0,10,0,10" Width="NaN">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Background" Value="Transparent"/>
                        <Setter Property="Foreground" Value="White"/>
                        <Setter Property="BorderBrush" Value="#555"/>
                        <Setter Property="BorderThickness" Value="1"/>
                        <Setter Property="Width" Value="60"/>

                        <Style.Triggers>
                            <DataTrigger Binding="{Binding IsMouseOver, RelativeSource={RelativeSource Self}}" Value="True">
                                <DataTrigger.EnterActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <ColorAnimation Duration="0:0:0.2" To="#333" Storyboard.TargetProperty="(Button.Background).(SolidColorBrush.Color)" />
                                        </Storyboard>
                                    </BeginStoryboard>
                                </DataTrigger.EnterActions>
                            </DataTrigger>

                            <DataTrigger Binding="{Binding IsPressed, RelativeSource={RelativeSource Self}}" Value="True">
                                <DataTrigger.EnterActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <ColorAnimation Duration="0:0:0.2" To="#333" Storyboard.TargetProperty="(Button.Background).(SolidColorBrush.Color)" />
                                        </Storyboard>
                                    </BeginStoryboard>
                                </DataTrigger.EnterActions>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>

                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                    <TextBlock Text="⏱️" FontSize="25" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    <TextBlock Text="Pomodoro" FontSize="12" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,7,0,0"/>
                </StackPanel>
            </Button>
        </Grid>



        <!-- Pravý panel – obsah podle záložky -->
        <ContentControl x:Name="MainContent" Grid.Column="1" />
    </Grid>
</Window>
