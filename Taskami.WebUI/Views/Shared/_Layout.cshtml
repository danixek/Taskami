@{
    string primaryBackgroundColor = Model.PrimaryColor as string ?? "#222222";
    string secondaryBackgroundColor = Model.SecondaryColor as string ?? "#191919";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Taskami</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="shortcut icon" href="~/img/taskami_logo.ico" type="image/x-icon">
</head>
<body>
    <style>
        :root {
            --secondary-bg-color: @(ViewData["SecondaryBackgroundColor"] ?? ViewData["PrimaryBackgroundColor"]);
        }
        body {
            background-color: @ViewData["PrimaryBackgroundColor"];
        }
    </style>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark box-shadow mb-3 px-2">
            <div class="container-fluid px-3">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="/img/taskami_logo_ico.png" width="32" /><strong class="position-relative opacity-75" style="top: 3px; left: 3px">Taskami</strong>
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
        <div class="container">
        @if (!string.IsNullOrEmpty(TempData["Error"] as string))
        {
            <div class="alert text-danger border-danger" role="alert">
                @TempData["Error"]
            </div>
        }
        else if (!string.IsNullOrEmpty(TempData["Success"] as string))
        {
            <div class="alert text-success border-success" role="alert">
                @TempData["Success"]
            </div>
        }
        </div>

        <nav class="sidebar" style="background-color: @secondaryBackgroundColor">
            <a title="Inbox" asp-controller="Home" asp-action="Inbox"><i class="bi bi-house-door-fill"></i></a>
            <a title="Today" asp-controller="Home" asp-action="Today"><i class="bi bi-calendar-day"></i></a>
            <a title="Upcoming" asp-controller="Home" asp-action="Calendar"><i class="bi bi-calendar3"></i></a>
            <a title="Filters & Labels" asp-controller="Home" asp-action="Filters"><i class="bi bi-funnel-fill"></i></a>
            <a title="Pomo Timer" asp-controller="Home" asp-action="Pomodoro"><i class="bi bi-stopwatch-fill"></i></a>

            <a title="Settings" class="mt-auto" asp-controller="Home" asp-action="Settings"><i class="bi bi-gear-fill"></i></a>
        </nav>
    </header>
    <div class="container px-5">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
