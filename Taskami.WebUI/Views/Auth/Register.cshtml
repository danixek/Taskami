@model Taskami.WebUI.Models.RegisterViewModel

<partial name="_LogoHeader" />

<form asp-action="Register" method="post" class="d-flex flex-column align-items-center">
        <h2 class="text-left mb-4">Registrace</h2>
        <div class="mt-2 w-100" style="max-width: 200px;">
            <label class="d-block mb-1 text-left">Email</label>
            <input asp-for="Email" class="dark-input w-100" />
            <span asp-validation-for="Email"></span>
        </div>
        <div class="mt-3 w-100" style="max-width: 200px;">
            <label class="d-block mb-1">Heslo</label>
            <input asp-for="Password" type="password" class="dark-input w-100" />
            <span asp-validation-for="Password"></span>
        </div>
        <div class="mt-3 w-100" style="max-width: 200px;">
            <label class="d-block mb-1">Potvrzení hesla</label>
            <input asp-for="ConfirmPassword" type="password" class="dark-input w-100" />
            <span asp-validation-for="ConfirmPassword"></span>
        </div>
        <button type="submit" class="dark-button mt-4" style="width: 100px;">Registrovat</button>

    <div asp-validation-summary="All" class="text-danger mt-5"></div>
</form>